<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    xmlns:tools="http://schemas.android.com/tools">


    <ImageView
        android:id="@+id/char_pic"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/the_avenger"
        tools:layout_editor_absoluteX="9dp" />

    <TextView
        android:id="@+id/char_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/kanit_bold"
        android:text="charname"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.027"
        app:layout_constraintStart_toEndOf="@+id/char_pic"
        app:layout_constraintTop_toTopOf="@+id/char_pic" />

    <TextView
        android:id="@+id/char_genre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/kanit"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/char_name"
        app:layout_constraintTop_toBottomOf="@+id/char_name"
        tools:text="@string/Genre" />

    <TextView
        android:id="@+id/char_sutradara"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/kanit"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/char_pic"
        app:layout_constraintStart_toStartOf="@+id/char_genre"
        app:layout_constraintTop_toBottomOf="@+id/char_genre"
        app:layout_constraintVertical_bias="0.0"
        tools:text="@string/Sutradara" />
</androidx.constraintlayout.widget.ConstraintLayout>